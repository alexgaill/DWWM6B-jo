{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="mb-3 text-center">Liste des athlètes participants</h2>
    <hr>
        {{ form(form) }}
    <hr>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Photo</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de naissance</th>
                <th>Pays</th>
                <th>Discipline</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for athlete in athletes %}
                <tr>
                    <td>{{ athlete.id }}</td>
                    <td><img src="{{ asset('/assets/img/upload/profil/' ~ athlete.photo) }}" alt="" width="50px" height="auto"></td>
                    <td>{{ athlete.nom }}</td>
                    <td>{{ athlete.prenom }}</td>
                    <td>{{ athlete.dateNaissance|format_date('medium', locale='fr') }}</td>
                    <td><img src="{{ asset('/assets/img/upload/drapeau/' ~ athlete.pays.drapeau) }}" alt=""></td>
                    <td>{{ athlete.discipline.nom }}</td>
                    <td>
                        <a href="{{ path('update_athlete', {id:athlete.id}) }}"><button class="btn btn-info">Modifier</button></a>
                        <a href="{{ path('delete_athlete', {id:athlete.id}) }}"><button class="btn btn-danger" onclick="Êtes-vous sûr?">Supprimer</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun athlète d'inscrit</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
